<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.layout.ToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title="Open Source"
    app:expanded="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_location="appbar_header">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/star"
            app:tint="@color/primary_color" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/sesl_primary_text"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/app_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="1.0.0"
            android:textSize="18sp"/>
    </LinearLayout>

    <de.dlyt.yanndroid.oneui.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="54dp"
            android:orientation="vertical">

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OneUI"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="Yanndroid | UI Design"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Firebase"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="Google | Server"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lottie"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="Airbnb | Animated Pictures"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TouchImageView"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="MikeOrtiz | Zoomable ImageView"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ReadMoreTextView"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="PRNDcompany | Expandable TextView"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CircularImageView"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="MikhaelLopez | CircularImageView"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RollingText"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="YvesCheung | Rolling TextView Animation"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Material ViewPager Dots Indicator"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="tommybuonomo | ViewPager Dot Indicator"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FileDownloader"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="lingochamp | Downloading Media Files"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ExoPlayer"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="Google | Video Player"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

            <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
                android:background="@drawable/oui_drawer_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LeakCanary"
                        android:textColor="@color/sesl_primary_text"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="SquareUp | Memory Leak Detection"
                        android:textSize="12sp"/>
                </LinearLayout>
            </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>
        </LinearLayout>
    </de.dlyt.yanndroid.oneui.widget.NestedScrollView>
</de.dlyt.yanndroid.oneui.layout.ToolbarLayout>