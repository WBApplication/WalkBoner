<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Play Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/play_pause_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#33000000"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/play_pause_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_oui_play" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Bottom Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/like_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_oui_like_off"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.dlyt.yanndroid.oneui.widget.SeekBar
                android:id="@+id/video_duration_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:seslSeekBarMode="expand" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>