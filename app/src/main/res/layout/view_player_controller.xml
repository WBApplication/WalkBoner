<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_negative_transparent"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/slow_video_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_oui_arrow_left" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/slow_motion_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1x"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/fast_video_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_oui_arrow_right" />
    </LinearLayout>

    <!-- Play Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/play_pause_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#33000000"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/play_pause_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_oui_play"
                app:tint="#FFF" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Bottom Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">
            <!-- TODO: Add SeekBar Here -->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>