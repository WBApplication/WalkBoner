<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_location="drawer_panel">

    <de.dlyt.yanndroid.oneui.view.OptionGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <de.dlyt.yanndroid.oneui.widget.OptionButton
            android:id="@+id/profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:icon="@drawable/face_man_profile"
            app:text="Mój Profil" />

        <de.dlyt.yanndroid.oneui.menu.widget.MenuDivider
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginHorizontal="16dp" />

        <de.dlyt.yanndroid.oneui.widget.OptionButton
            android:id="@+id/home_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:icon="@drawable/ic_oui3_home"
            app:text="Strona Główna" />

        <de.dlyt.yanndroid.oneui.widget.OptionButton
            android:id="@+id/celebrity_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:icon="@drawable/ic_oui3_crown"
            app:text="Influencerki" />
    </de.dlyt.yanndroid.oneui.view.OptionGroup>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <de.dlyt.yanndroid.oneui.widget.OptionButton
        android:id="@+id/debug_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:icon="@drawable/bug"
        app:text="Debug" />

    <de.dlyt.yanndroid.oneui.widget.OptionButton
        android:id="@+id/premium_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:icon="@drawable/star"
        app:text="Premium" />

    <de.dlyt.yanndroid.oneui.widget.OptionButton
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:icon="@drawable/ic_oui_close"
        app:text="Wyloguj" />
</LinearLayout>