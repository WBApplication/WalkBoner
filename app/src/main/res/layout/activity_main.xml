<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.layout.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:drawer_icon="@drawable/ic_oui4_settings_2"
    app:subtitle="Strona Główna"
    app:title="@string/app_name"
    tools:context=".MainActivity">

    <de.dlyt.yanndroid.oneui.view.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/content_drawer" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/create_fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:icon="@drawable/ic_oui_plus"
        app:iconTint="#FFF"
        app:layout_location="root"
        android:layout_margin="16dp"
        android:layout_gravity="end|bottom"/>
</de.dlyt.yanndroid.oneui.layout.DrawerLayout>