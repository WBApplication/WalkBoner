<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.widget.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/oui_drawer_background"
    android:layout_marginHorizontal="24dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/mad_dog"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_weight="2">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miły Piesek"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/primary_color"
            android:textSize="22sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nie gryzie"
            android:gravity="center"
            android:textSize="14sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Słodki piesek chciałby, aby ktoś go nakarmił... Problem w tym, że nie ma kto go pilnować (chodzi o... serwer).\n\nKtoś musi być przy nim aby stale wiedzieć czego mu brakuje.\n\nWrzuć mu pieniążka, a oddamy go Ci, oraz innym użytkownikom, abyście się nim opiekowali!\n\nPoza tym - mamy wiele innych pomysłów.\n\nPiesek będzie zmieniał formę w zależności od panujących zdarzeń w świecie influencerów."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="Patronite"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="Przelew"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_weight="2"
        android:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miły Piesek"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/primary_color"
            android:textSize="22sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nie gryzie"
            android:gravity="center"
            android:textSize="14sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jedzonko"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="22sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/eat_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100/100"
            android:textSize="14sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pićko"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="22sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/water_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100/100"
            android:textSize="14sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Głasku"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="22sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/petting_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100/100"
            android:textSize="14sp"/>
    </LinearLayout>
</de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>