<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Moderacja"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/m3_text_color_on_surface"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="Album"
        android:textSize="18sp"
        android:textColor="@color/m3_text_color_on_surface"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/copy_album_uid_button"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="start|center"
        android:text="Skopiuj UID Albumu"
        app:icon="@drawable/ic_copy_outline_wb"
        app:iconGravity="start"
        app:iconSize="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/copy_user_uid_button"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="start|center"
        android:text="Skopiuj UID Użytkownika"
        app:icon="@drawable/ic_copy_outline_wb"
        app:iconGravity="start"
        app:iconSize="30dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="88dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_album_button"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="start|center"
        android:text="Edytuj Album"
        app:icon="@drawable/ic_edit_wb"
        app:iconGravity="start"
        app:iconSize="30dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="88dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ban_user_button"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="start|center"
        android:text="Zbanuj Użytkownika"
        app:icon="@drawable/ic_block_wb"
        app:iconGravity="start"
        app:iconSize="30dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="88dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_album_button"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="start|center"
        android:text="Usuń Album"
        app:icon="@drawable/ic_delete_wb"
        app:iconGravity="start"
        app:iconSize="30dp" />
</LinearLayout>